<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Library</OutputType>
        <AppDesignerFolder>Properties</AppDesignerFolder>
        <FileAlignment>512</FileAlignment>
        <LangVersion>12</LangVersion>
        <TargetFramework>net48</TargetFramework>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
        <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
        <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Optimize>true</Optimize>
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'NWAPI'">
        <AssemblyName>Axwabo.Helpers.NWAPI</AssemblyName>
        <DefineConstants>NWAPI</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <Reference Include="Assembly-CSharp"/>
        <Reference Include="Assembly-CSharp-firstpass"/>
        <Reference Include="CommandSystem.Core"/>
        <Reference Include="Mirror"/>
        <Reference Include="LabApi" Condition="'$(Configuration)' == 'LabApi'"/>
        <Reference Include="PluginAPI" Condition="'$(Configuration)' == 'NWAPI'"/>
        <Reference Include="Pooling"/>
        <Reference Include="UnityEngine.CoreModule"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Lib.Harmony" Version="2.2.2"/>
    </ItemGroup>

    <ItemGroup>
        <Using Include="System"/>
        <Using Include="System.Collections.Generic"/>
        <Using Include="System.Linq"/>
        <Using Include="System.Reflection"/>
        <Using Include="System.Reflection.Emit"/>
        <Using Include="HarmonyLib"/>
        <Using Include="LabApi.Features.Wrappers" Condition="'$(Configuration)' == 'LabApi'"/>
        <Using Include="InventorySystem.Items"/>
        <Using Include="PluginAPI.Core" Condition="'$(Configuration)' == 'NWAPI'"/>
        <Using Include="UnityEngine"/>
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'LabApi'">
        <Using Include="LabApi.Features.Wrappers"/>
        <Using Include="LabApi.Features.Console.Logger" Alias="Logger"/>
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'NWAPI'">
        <Using Include="PluginAPI.Core.Log" Alias="Logger"/>
    </ItemGroup>

</Project>
